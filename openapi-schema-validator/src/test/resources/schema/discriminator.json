[
  {
    "description": "discriminator for anyOf/oneOf",
    "schema": {
      "components": {
        "schemas": {
          "Cat": {
            "type": "object",
            "required": [
              "pet_type"
            ],
            "properties": {
              "pet_type": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "Dog": {
            "type": "object",
            "required": [
              "pet_type"
            ],
            "properties": {
              "pet_type": {
                "type": "string"
              },
              "bark": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "oneOf": [
        {
          "$ref": "#/components/schemas/Cat"
        },
        {
          "$ref": "#/components/schemas/Dog"
        },
        {
          "type": "object",
          "required": [
            "pet_type"
          ],
          "properties": {
            "foo": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ],
      "discriminator": {
        "propertyName": "pet_type",
        "mapping": {
          "dog": "#/components/schemas/Dog"
        }
      }
    },
    "tests": [
      {
        "description": "mapping key is valid",
        "data": {
          "pet_type": "dog"
        },
        "valid": true
      },
      {
        "description": "mapping key is valid - additionalProperty is invalid",
        "data": {
          "pet_type": "dog",
          "foo": "bar"
        },
        "valid": false
      },
      {
        "description": "Schema name is valid",
        "data": {
          "pet_type": "Dog",
          "bark": "foo"
        },
        "valid": true
      },
      {
        "description": "Schema name is valid - additionalProperty is invalid",
        "data": {
          "pet_type": "Dog",
          "foo": "bar"
        },
        "valid": false
      },
      {
        "description": "something else is invalid",
        "data": {
          "pet_type": "foo"
        },
        "valid": false
      },
      {
        "description": "Schema name is valid - no mapping",
        "data": {
          "pet_type": "Cat"
        },
        "valid": true
      },
      {
        "description": "Schema name is invalid - no mapping",
        "data": {
          "pet_type": "cat"
        },
        "valid": false
      },
      {
        "description": "Null schema name is invalid - no mapping",
        "data": {},
        "valid": false
      }
    ]
  },
  {
    "description": "discriminator for allOf",
    "schema": {
      "components": {
        "schemas": {
          "Animal": {
            "type": "object",
            "required": [
              "animal_type",
              "age"
            ],
            "properties": {
              "animal_type": {
                "type": "string"
              },
              "age": {
                "type": "integer"
              }
            },
            "discriminator": {
              "propertyName": "animal_type",
              "mapping": {
                "dog": "#/components/schemas/Dog"
              }
            }
          },
          "Pet": {
            "allOf": [
              {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              },
              {
                "$ref": "#/components/schemas/Animal"
              }
            ]
          },
          "Dog": {
            "allOf": [
              {
                "type": "object",
                "properties": {
                  "bark": {
                    "type": "string"
                  }
                }
              },
              {
                "$ref": "#/components/schemas/Pet"
              }
            ]
          }
        }
      },
      "$ref": "#/components/schemas/Dog"
    },
    "tests": [
      {
        "description": "mapped schema name is valid",
        "data": {
          "animal_type": "dog",
          "name": "Medor",
          "bark": "foo",
          "age": 5
        },
        "valid": true
      },
      {
        "description": "Direct schema name is valid",
        "data": {
          "animal_type": "Dog",
          "name": "Medor",
          "bark": "foo",
          "age": 5
        },
        "valid": true
      },
      {
        "description": "Validate parent schema, age missing",
        "data": {
          "animal_type": "Dog",
          "name": "Medor",
          "bark": "foo"
        },
        "valid": false
      },
      {
        "description": "something else is invalid",
        "data": {
          "animal_type": "foo",
          "name": "Medor",
          "bark": "foo",
          "age": 5
        },
        "valid": false
      }
    ]
  },
  {
    "description": "wrong discriminator setup",
    "schema": {
      "oneOf": [
        {},
        {}
      ],
      "discriminator": {}
    },
    "tests": [
      {
        "description": "Schema name is valid - invalid setup",
        "data": {
          "pet_type": "Dog"
        },
        "valid": false
      }
    ]
  },
